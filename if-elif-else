if 1 > 2:
    message = "if 1 > 2"
elif 1 > 3:
    message = "elif 1 > 3"
else:
    message = "Qdo todos else falharem, use else (se desejar eh claro!)"
    
print(message)


x_temp = input("Digite um numero inteiro: ")

x = int(x_temp)

#if-then-else
par_impar = "even" if x % 2 == 0 else "odd"

print(par_impar)
